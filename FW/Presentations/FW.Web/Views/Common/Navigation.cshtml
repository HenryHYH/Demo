@{
    Layout = null;
}

@helper ShowMenu(IEnumerable<NavigationModel> list)
{
    foreach (var item in list)
    {
        if (item.Children.Count > 0)
        {
            <li class="dropdown">
                <a href="@item.Url" title="@item.Title" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                    @item.Title
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                    @ShowMenu(item.Children)
                </ul>
            </li>
        }
        else
        {
            <li>
                <a href="@item.Url" title="@item.Title">@item.Title</a>
            </li>
        }
    }
}

