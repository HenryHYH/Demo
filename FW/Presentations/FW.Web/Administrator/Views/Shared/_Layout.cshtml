@using FW.Web.Framework.UI
@{
    // jquery
    Html.AddResource("~/Scripts/jquery-1.11.2.min.js", ResourcePriority.High);

    // bootstrap
    Html.AddResource("~/Content/bootstrap.min.css", ResourcePriority.High);
    Html.AddResource("~/Content/bootstrap-theme.min.css", ResourcePriority.High);
    Html.AddResource("~/Scripts/bootstrap.min.js", ResourcePriority.High);

    // bootstrap hover dropdown
    Html.AddResource("~/Scripts/bootstrap-hover-dropdown.js", ResourcePriority.High);

    // font-awesome
    Html.AddResource("~/Content/font-awesome.min.css", ResourcePriority.High);

    // admin style
    Html.AddResource("~/Administrator/Content/style.css", ResourcePriority.High);

    Html.AddBreadCrumb("Home", "/");

    var defaultTitle = "FW";
    var title = null == ViewBag.Title ? defaultTitle : (ViewBag.Title + " - " + defaultTitle);
}
<!DOCTYPE html>
<html lang="chn">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@(title)</title>
    @Html.GenerateResources(this.Url, ResourceLocation.Head)
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-navigation">
                    <span class="sr-only"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/"><i class="fa fa-home"></i></a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-navigation">
                @Html.Action("Navigation", "Common", new { area = "Administrator" })
            </div>
        </div>
    </nav>

    <div class="container-fluid" id="tool-bar">
        <div class="row">
            <div class="col-md-12">
                <div class="pull-left">
                    @Html.Action("BreadCrumb", "Common", new { area = "Administrator" })
                </div>
                <div class="pull-right">
                    @RenderSection("Operation", false)
                </div>
            </div>
        </div>
    </div>
    @RenderBody()
    @Html.GenerateResources(this.Url, ResourceLocation.Footer)
</body>
</html>