@{
    ViewBag.Title = "Index";
    ViewBag.PageTitle = "User list";
    Layout = "~/Administrator/Views/Shared/_PanelLayout.cshtml";
}
@using FW.Web.Framework.UI

@section Operation
{
    <input type="button" class="btn btn-default" value="Default" />
    <input type="button" class="btn btn-primary" value="Primary" />
    <input type="button" class="btn btn-success" value="Success" />
    <input type="button" class="btn btn-info" value="Info" />
    <input type="button" class="btn btn-warning" value="Warning" />
    <input type="button" class="btn btn-danger" value="Danger" />
}

<div id="tb-container" class="table-responsive"></div>
@Html.Action("Table", "Common", new { area = "Administrator" })
<script type="text/html" id="tb-tmpl1">
    <table class="table">
        <thead>
            <tr>
                {{each columns as col}}
                <th>{{col.title}}</th>
                {{/each}}
                <th>Operation</th>
            </tr>
        </thead>
        <tbody>
            {{each data as row}}
            <tr>
                <td>{{row.Index}}</td>
                <td>{{row.Name}}</td>
                <td>{{row.Age}}</td>
                <td>Haha</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</script>

@section Script
{
    <script type="text/javascript">
        $(function () {
            $("#tb-container").table({
                url: '@Url.Action("UserList", "User")',
                // template: "tb-tmpl1",
                // customTemplate: true,
                // condition: { pageIndex: 1, pageSize: 5 },
                // pager: { pageIndex: 1, pageSize: 1000 },
                columns: [{ title: "No.", field: "Id" }, { title: "Name", field: "Name" }, { title: "Age", field: "Age" }]
            });
        });
    </script>
}