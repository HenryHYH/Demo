@{
    Layout = null;
}
@model IList<FW.Admin.Models.Common.NavigationModel>
@if (null != Model && Model.Count > 0)
{
    <ul class="nav navbar-nav">
        @ShowMenu(Model)
    </ul>
}

@helper ShowMenu(IList<FW.Admin.Models.Common.NavigationModel> list)
{
    foreach (var item in list)
    {
        if (item.Children.Count > 0)
        {
            <li class="dropdown">
                <a href="@item.Url" title="@item.Description" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">@item.Title <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                    @ShowMenu(item.Children)
                </ul>
            </li>
        }
        else
        {
            <li><a href="@item.Url" title="@item.Description">@item.Title</a></li>
        }
    }
}